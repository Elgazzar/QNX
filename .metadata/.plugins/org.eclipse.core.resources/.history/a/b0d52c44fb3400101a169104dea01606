#include <pthread.h>
#include <stdio.h>
#include <unistd.h>
#include <sched.h>
#include <stdlib.h>

// High-priority thread function
void* high_priority(void* arg) {
    while (1) {
        printf("üî• High priority thread running\n");
        usleep(500000); // 500ms
    }
    return NULL;
}

// Low-priority thread function
void* low_priority(void* arg) {
    while (1) {
        printf("üõ†Ô∏è  Low priority thread running\n");
        usleep(500000); // 500ms
    }
    return NULL;
}

int main(void) {
    pthread_t tid_high, tid_low;
    pthread_attr_t attr_high, attr_low;
    struct sched_param param_high, param_low;

    // Initialize thread attributes
    pthread_attr_init(&attr_high);
    pthread_attr_init(&attr_low);

	puts("Hello World!!!"); /* prints Hello World!!! */
	return EXIT_SUCCESS;
}
